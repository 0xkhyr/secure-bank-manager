# Configuration de l'application bancaire
# Copier ce fichier vers .env et modifier les valeurs

# Clé secrète Flask (générer une clé aléatoire en production)
SECRET_KEY=votre-cle-secrete-tres-longue-et-aleatoire

# Clé HMAC pour l'audit (générer une clé aléatoire en production)
HMAC_SECRET_KEY=votre-cle-hmac-secrete-pour-audit

# Configuration de la base de données
DATABASE_PATH=/app/data/bank.db

# Configuration Flask
FLASK_ENV=production
FLASK_DEBUG=0

# Sécurité
MAX_LOGIN_ATTEMPTS=3
SESSION_TIMEOUT=3600

# Règles métier bancaires (Tunisie - Dinar Tunisien)
DEVISE=TND
SOLDE_MINIMUM_INITIAL=250.000
SOLDE_MINIMUM_COMPTE=0.000
RETRAIT_MAXIMUM=500.000
